{
  "name": "grunt-dojo2",
  "version": "0.1.3-pre",
  "description": "A package of Grunt tasks to use with Dojo 2 Packages",
  "engines": {
    "node": ">=4.0.0",
    "npm": ">=3.0.0"
  },
  "homepage": "http://dojotoolkit.org",
  "keywords": [
    "dojo2",
    "gruntplugin"
  ],
  "bugs": {
    "url": "https://github.com/dojo/grunt-dojo2/issues"
  },
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "prepublish": "shx rm -rf ./typings && typings install && tsc -p .",
    "test": "tsc -p . && intern",
    "ci": "rm -rf tmp && tsc -p . && intern config=@ci && cat ./lcov.info | ./node_modules/.bin/codecov"
  },
  "author": "Bryan Forbes <bryan@reigndropsfall.net>",
