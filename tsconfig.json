{
	"compilerOptions": {
		"baseUrl": ".",
		"experimentalDecorators": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"lib": [
			"es5",
			"es2015",
			"es2015.collection",
			"es2015.promise",
			"es2015.symbol",
			"es2015.symbol.wellknown",
			"es2015.iterable",
			"dom"
		],
		"module": "umd",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"pretty": true,
		"target": "es5",
		"strictNullChecks": true,
		"noImplicitThis": true
	},
	"include": [
		"./index.ts",
		"./index.d.ts",
		"./options/**/*.ts",
		"./tasks/**/*.ts",
		"./lib/**/*.ts",
		"./tests/**/*.ts",
		"./typings/index.d.ts"
	]
}
