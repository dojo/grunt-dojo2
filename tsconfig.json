{
	"compilerOptions": {
		"baseUrl": ".",
		"declaration": false,
		"experimentalDecorators": true,
		"inlineSources": true,
		"inlineSourceMap": true,
		"lib": [
			"dom",
			"es5",
			"es2015",
			"es2015.collection",
			"es2015.iterable",
			"es2015.promise",
			"es2015.symbol",
			"es2015.symbol.wellknown"
		],
		"module": "umd",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"pretty": true,
		"target": "es2015",
		"strict": true,
		"types": [ "intern" ]
	},
	"include": [
		"./index.ts",
		"./index.d.ts",
		"./options/**/*.ts",
		"./tasks/**/*.ts",
		"./lib/**/*.ts",
		"./tests/**/*.ts"
	]
}
